  "aio": {
    "block_size": 1048576,
    "queue_depth": 8,
    "thread_count": 1,
    "single_submit": false,
    "overlap_events": true
  },

  "optimizer": {
    "type": "DeepSpeedCPUAdam",
    "params": {
      "lr": 1e-4,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.01,
      "torch_adam": true
    }
  },

  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-4,
      "warmup_num_steps": 0
    }
  },

  "zero_allow_untested_optimizer": false,
  "zero_force_ds_cpu_optimizer": true,

  "wall_clock_breakdown": false
